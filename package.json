{
  "name": "piximps",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:demo": "tsup src/piximps/browser.ts --format iife --global-name Piximps --outDir docs --no-splitting --no-clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "homepage": "https://kamilrybacki.github.io/Piximps/",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamilrybacki/Piximps.git"
  },
  "keywords": ["avatar", "pixel-art", "procedural-generation", "svg", "identicon"],
  "author": "Kamil Rybacki",
  "license": "ISC",
  "description": "Deterministic demonic pixel-art avatar generator",
  "dependencies": {
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/pngjs": "^6.0.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
